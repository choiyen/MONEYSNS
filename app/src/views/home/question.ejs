            <!-- empty space -->
            <section id="home">
                <!-- absolute때문에 텅빈공간 채워주기위해 텅빈레이아웃생성 -->
            </section>

            <!-- Select Content -->
            <section id="intro">
                <div class="intro__container">
                    <div class="section__title__wrap">
                        <h2 class="txt__harfline">
                            <div class="section__titles">
                                <a href="#" class="section__logo selected" onclick="selectImg(1)">
                                    <i class="fas fa-image"></i>
                                    <span class="section__logo__title">Question</span>
                                </a>
                            </div>
                            <span class="half-line"></span>
                        </h2>
                    </div>
                    <div class="intro__new__wrap">
                        <div id="select__img">
                            <div id="question__wrap">
                                <span id="question_seq">번호</span>
                                <span id="question_title">제목</span>
                                <span id="question_user">작성자</span>
                                <span id="question_day">문의일시</span>
                                <span id="question_num">답변개수</span><br><br><hr><br><br>
                                <% for(var i = question_title.length - 1; i >= 0; i--){ %>
                                    <% if(id != null){ %>
                                        <span id="question_seq"><%= i + 1 %></span>
                                        <a href="/board_question/fjfdjdkj$Efjd@/?id=<%= id %>&n=<%= i + 1 %>">
                                            <span id="question_titles"><%= question_title[i] %></span></a>
                                        <span id="question_user"><%= question_id[i] %></span>
                                        <% if(question_data[i] < 1){ %>
                                            <span id="question_day"><%= Math.floor(question_data[i] * 60) %> 초전</span><!-- 1분 이하이므로 분으로 초로 수정 -->
                                        <% } else if(question_data[i] >= 60 && question_data[i] < 1440) { %>
                                            <span id="question_day"><%= Math.floor(question_data[i] / 60) %> 시간전</span> <!-- 1시간이 지나서 분으로 시간으로 수정 -->
                                        <% } else if(question_data[i] >= 1440) { %>
                                            <span id="question_day"><%= Math.floor(question_data[i] / 60 / 24) %> 일전</span> <!-- 1일이 지나서 시간을 일로 수정 -->
                                        <% } else {%>
                                            <span id="question_day"><%= Math.floor(question_data[i]) %> 분전</span>
                                        <% } %>
                                        <!-- <span id="question_day">2</span> -->
                                        <span id="question_num"><%= question_num[i] %>개</span><br><br><hr><br><br>
                                    <% } else{ %>
                                            <span id="question_seq"><%= i + 1 %></span>
                                            <a href="/question" onclick="alert('로그인 후 이용해주시길 바랍니다');">
                                                <span id="question_title"><%= question_title[i] %></span></a>
                                            <span id="question_user"><%= question_id[i] %></span>
                                            <% if(question_data[i] < 1){ %>
                                                <span id="question_day"><%= Math.floor(question_data[i] * 60) %> 초전</span><!-- 1분 이하이므로 분으로 초로 수정 -->
                                            <% } else if(question_data[i] >= 60 && question_data[i] < 1440) { %>
                                                <span id="question_day"><%= Math.floor(question_data[i] / 60) %> 시간전</span> <!-- 1시간이 지나서 분으로 시간으로 수정 -->
                                            <% } else if(question_data[i] >= 1440) { %>
                                                <span id="question_day"><%= Math.floor(question_data[i] / 60 / 24) %> 일전</span> <!-- 1일이 지나서 시간을 일로 수정 -->
                                            <% } else {%>
                                                <span id="question_day"><%= Math.floor(question_data[i]) %> 분전</span>
                                            <% } %>
                                            <span id="question_num"><%= question_num[i] %>개</span><br><br><hr><br><br>
                                    <% } %>
                                <% } %>

                                
                            </div>
                        </div>
                        
                    </div>
                    <a href="#" id="question_upload" style="display: none;"><span>질문 등록</span></a>
                </div>
            </section>

